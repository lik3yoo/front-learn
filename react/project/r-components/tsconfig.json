{
	"compilerOptions": {
		"target": "es5",
		"module": "esnext",
		"jsx": "react",
		"declaration": true,
		"outDir": "./lib",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strictNullChecks": true,
		"moduleResolution": "Bundler",
		"baseUrl": "./",
		"paths": {
			"@/*": [
				"src/*"
			]
		}
	},
	"include": [
		"src",
	],
	"exclude": [
		"site"
	]
}